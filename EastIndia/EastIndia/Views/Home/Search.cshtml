@model EastIndia.Models.Dtos.Package


@{
	ViewBag.Title = "Search";
}
<h1 style="text-align:center">Search for routes</h1>


<div class="row">
    <div class="col-md-10">
        @using (Html.BeginForm("CalculateRoute", "Route", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
        {
            @Html.AntiForgeryToken()

            <hr/>
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            <div class="form-group">
                @Html.LabelFor(m => m.FromCity, new {@class = "col-md-2 control-label"})
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.FromCity, new {@class = "form-control"})
                    @Html.ValidationMessageFor(m => m.FromCity, "", new {@class = "text-danger"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ToCity, new {@class = "col-md-2 control-label"})
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.ToCity, new {@class = "form-control"})
                    @Html.ValidationMessageFor(m => m.ToCity, "", new {@class = "text-danger"})
                </div>
            </div>
			<div class="col-md-10">
				<input type="submit" value="Search"  class="btn btn-default">
			</div>
        }
